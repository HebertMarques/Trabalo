  <script>
    const defaultConfig = {
      map_title: "Jornada de Aprendizado",
      complete_button_text: "Jogar",
      locked_message: "Complete o nÃ­vel anterior primeiro!",
      background_color: "#87CEEB",
      surface_color: "#FFE5EC",
      text_color: "#333333",
      primary_action_color: "#FF6B9D",
      secondary_action_color: "#FFD700",
      font_family: "Nunito",
      font_size: 16
    };

    const levels = [
      { id: "level-1", number: 1, icon: "ðŸŒ±" },
      { id: "level-2", number: 2, icon: "ðŸŒ¿" },
      { id: "level-3", number: 3, icon: "ðŸŒº" },
      { id: "level-4", number: 4, icon: "ðŸŒ¸" },
      { id: "level-5", number: 5, icon: "ðŸŒ»" },
      { id: "level-6", number: 6, icon: "ðŸŒ¼" },
      { id: "level-7", number: 7, icon: "ðŸŒ¹" },
      { id: "level-8", number: 8, icon: "ðŸŒ·" },
      { id: "level-9", number: 9, icon: "ðŸ’" },
      { id: "level-10", number: 10, icon: "ðŸ†" }
    ];

    let completedLevels = new Set();
    let currentLevelId = null;

    async function onConfigChange(config) {
      const customFont = config.font_family || defaultConfig.font_family;
      const baseFontStack = 'Nunito, Comic Sans MS, cursive, sans-serif';
      const baseSize = config.font_size || defaultConfig.font_size;

      document.getElementById('map-title').textContent = config.map_title || defaultConfig.map_title;
      document.getElementById('btn-play').textContent = config.complete_button_text || defaultConfig.complete_button_text;

      document.getElementById('map-title').style.fontFamily = `${customFont}, ${baseFontStack}`;
      document.querySelector('.modal-title').style.fontFamily = `${customFont}, ${baseFontStack}`;
      document.querySelectorAll('.btn').forEach(btn => {
        btn.style.fontFamily = `${customFont}, ${baseFontStack}`;
      });

      document.getElementById('map-title').style.fontSize = `${baseSize * 3}px`;
      document.querySelector('.modal-title').style.fontSize = `${baseSize * 2}px`;
      document.querySelector('.modal-text').style.fontSize = `${baseSize * 1.125}px`;
      document.querySelectorAll('.btn').forEach(btn => {
        btn.style.fontSize = `${baseSize * 1.125}px`;
      });

      const backgroundColor = config.background_color || defaultConfig.background_color;
      const surfaceColor = config.surface_color || defaultConfig.surface_color;
      const textColor = config.text_color || defaultConfig.text_color;
      const primaryActionColor = config.primary_action_color || defaultConfig.primary_action_color;
      const secondaryActionColor = config.secondary_action_color || defaultConfig.secondary_action_color;

      document.querySelector('.game-wrapper').style.background = `linear-gradient(180deg, ${backgroundColor} 0%, ${backgroundColor}ee 50%, #90EE90 100%)`;
      
      document.querySelector('.modal').style.background = `linear-gradient(135deg, ${surfaceColor} 0%, ${surfaceColor}dd 100%)`;
      
      document.querySelector('.modal-title').style.color = primaryActionColor;
      document.querySelector('.modal-text').style.color = textColor;
      
      document.querySelector('.progress-bar-fill').style.background = `linear-gradient(90deg, ${secondaryActionColor} 0%, ${secondaryActionColor}dd 100%)`;
      
      document.querySelector('.btn-play').style.background = `linear-gradient(135deg, ${primaryActionColor} 0%, ${primaryActionColor}dd 100%)`;
      
      document.querySelectorAll('.level-button.completed').forEach(btn => {
        btn.style.background = `linear-gradient(135deg, ${secondaryActionColor} 0%, ${secondaryActionColor}dd 100%)`;
      });

      document.querySelectorAll('.level-button.current').forEach(btn => {
        btn.style.background = `linear-gradient(135deg, ${primaryActionColor} 0%, ${primaryActionColor}dd 100%)`;
      });
    }

    function renderMap() {
      const mapPath = document.getElementById('map-path');
      mapPath.innerHTML = '';

      levels.forEach((level, index) => {
        const isCompleted = completedLevels.has(level.id);
        const stars = isCompleted ? 3 : 0;
        
        const previousLevel = index > 0 ? levels[index - 1] : null;
        const isPreviousCompleted = !previousLevel || completedLevels.has(previousLevel.id);
        const isLocked = !isPreviousCompleted;
        const isCurrent = isPreviousCompleted && !isCompleted;

        const node = document.createElement('div');
        node.className = 'level-node';

        const button = document.createElement('button');
        button.className = `level-button ${isCompleted ? 'completed' : ''} ${isCurrent ? 'current' : ''} ${isLocked ? 'locked' : ''}`;
        button.innerHTML = level.icon;
        button.setAttribute('aria-label', `NÃ­vel ${level.number}`);

        if (!isLocked) {
          button.onclick = () => openModal(level.id, level.number, level.icon, isCompleted);
        } else {
          button.onclick = () => showLockedMessage(button);
        }

        const levelNumber = document.createElement('div');
        levelNumber.className = 'level-number';
        levelNumber.textContent = level.number;

        button.appendChild(levelNumber);

        if (isCompleted && stars > 0) {
          const starsDisplay = document.createElement('div');
          starsDisplay.className = 'stars-display';
          for (let i = 0; i < stars; i++) {
            const star = document.createElement('span');
            star.className = 'star-icon';
            star.textContent = 'â­';
            starsDisplay.appendChild(star);
          }
          button.appendChild(starsDisplay);
        }

        node.appendChild(button);
        mapPath.appendChild(node);
      });
    }

    function updateProgress() {
      const completedCount = completedLevels.size;
      const totalCount = levels.length;
      const percentage = Math.round((completedCount / totalCount) * 100);

      const progressFill = document.getElementById('progress-fill');
      progressFill.style.width = `${percentage}%`;
      progressFill.textContent = `${percentage}%`;
    }

    function showLockedMessage(buttonElement) {
      const existingMessage = buttonElement.parentElement.querySelector('.locked-message');
      if (existingMessage) {
        existingMessage.remove();
      }

      const message = document.createElement('div');
      message.className = 'locked-message show';
      message.textContent = window.elementSdk?.config?.locked_message || defaultConfig.locked_message;
      buttonElement.parentElement.appendChild(message);

      setTimeout(() => {
        message.remove();
      }, 3000);
    }

    function openModal(levelId, levelNumber, levelIcon, isCompleted) {
      currentLevelId = levelId;
      
      const modal = document.getElementById('modal-overlay');
      const modalIcon = document.getElementById('modal-icon');
      const modalTitle = document.getElementById('modal-title');
      const modalText = document.getElementById('modal-text');
      const btnPlay = document.getElementById('btn-play');

      modalIcon.textContent = levelIcon;
      modalTitle.textContent = `NÃ­vel ${levelNumber}`;
      
      if (isCompleted) {
        modalText.textContent = 'VocÃª jÃ¡ completou este nÃ­vel! Quer jogar novamente?';
        btnPlay.textContent = 'Jogar Novamente';
      } else {
        modalText.textContent = 'Pronto para comeÃ§ar esta fase?';
        btnPlay.textContent = window.elementSdk?.config?.complete_button_text || defaultConfig.complete_button_text;
      }

      modal.classList.add('active');
    }

    function closeModal() {
      document.getElementById('modal-overlay').classList.remove('active');
      currentLevelId = null;
    }

    function completeLevel() {
      if (!currentLevelId) return;

      completedLevels.add(currentLevelId);
      renderMap();
      updateProgress();
      closeModal();
    }

    document.getElementById('btn-cancel').addEventListener('click', closeModal);
    document.getElementById('btn-play').addEventListener('click', completeLevel);

    document.getElementById('modal-overlay').addEventListener('click', (e) => {
      if (e.target.id === 'modal-overlay') {
        closeModal();
      }
    });

    function initialize() {
      renderMap();
      updateProgress();

      if (window.elementSdk) {
        window.elementSdk.init({
          defaultConfig,
          onConfigChange,
          mapToCapabilities: (config) => ({
            recolorables: [
              {
                get: () => config.background_color || defaultConfig.background_color,
                set: (value) => {
                  config.background_color = value;
                  window.elementSdk.setConfig({ background_color: value });
                }
              },
              {
                get: () => config.surface_color || defaultConfig.surface_color,
                set: (value) => {
                  config.surface_color = value;
                  window.elementSdk.setConfig({ surface_color: value });
                }
              },
              {
                get: () => config.text_color || defaultConfig.text_color,
                set: (value) => {
                  config.text_color = value;
                  window.elementSdk.setConfig({ text_color: value });
                }
              },
              {
                get: () => config.primary_action_color || defaultConfig.primary_action_color,
                set: (value) => {
                  config.primary_action_color = value;
                  window.elementSdk.setConfig({ primary_action_color: value });
                }
              },
              {
                get: () => config.secondary_action_color || defaultConfig.secondary_action_color,
                set: (value) => {
                  config.secondary_action_color = value;
                  window.elementSdk.setConfig({ secondary_action_color: value });
                }
              }
            ],
            borderables: [],
            fontEditable: {
              get: () => config.font_family || defaultConfig.font_family,
              set: (value) => {
                config.font_family = value;
                window.elementSdk.setConfig({ font_family: value });
              }
            },
            fontSizeable: {
              get: () => config.font_size || defaultConfig.font_size,
              set: (value) => {
                config.font_size = value;
                window.elementSdk.setConfig({ font_size: value });
              }
            }
          }),
          mapToEditPanelValues: (config) => new Map([
            ["map_title", config.map_title || defaultConfig.map_title],
            ["complete_button_text", config.complete_button_text || defaultConfig.complete_button_text],
            ["locked_message", config.locked_message || defaultConfig.locked_message]
          ])
        });
      }
    }

    initialize();
  </script>
